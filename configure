#!/bin/sh

CC="gcc"
DEBUG=0

for i in $@;
do
    if [ $i == "--with-clang" ]; then
        CC="clang33"
    fi

    if [ $i == "--with-debug" ]; then
        DEBUG=1
    fi
done

echo "CC=$CC" > Make.rules

if [ $DEBUG == 1 -a $CC == "gcc" ]; then
    echo "CFLAGS+=-g3 -fvar-tracking" >> Make.rules
elif [ $DEBUG == 1 -a $CC == "clang33" ]; then
    echo "CFLAGS+=-g3" >> Make.rules
else
    echo "CFLAGS+=" >> Make.rules
fi
